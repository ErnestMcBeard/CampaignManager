<ContentDialog
    x:Class="CampaignManager.ContentDialogs.AddCampaignDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CampaignManager.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add Campaign"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="Save_Click"
    SecondaryButtonClick="Cancel_Click">

    <Grid>
        <StackPanel>
            <TextBox Header="Name"
                     Text="{Binding NewCampaign.Name, Mode=TwoWay}" />
            <TextBox Header="Description"
                     Text="{Binding NewCampaign.Descripton, Mode=TwoWay}"
                     Height="200" />
        </StackPanel>
    </Grid>
</ContentDialog>
